{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    // "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "target": "es2019",
    "declaration": true,
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "ctp.graphql",
        "tag": "print"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
